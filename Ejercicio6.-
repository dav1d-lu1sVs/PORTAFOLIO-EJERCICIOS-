#!/bin/bash
# DavidLuis
curso="6"
mensaje="¡Hola, bienvenido al script de David!"
echo "$mensaje"
echo

echo "Nombre del script: $0"
echo "Este script es el número: $curso"
echo

read -p "Introduce el primer número: " num1
read -p "Introduce el segundo número: " num2
echo

suma=$((num1 + num2))
resta=$((num1 - num2))
multiplicacion=$((num1 * num2))
division=$(echo "scale=2; $num1 / $num2" | bc)

echo "Suma: $num1 + $num2 = $suma"
echo "Resta: $num1 - $num2 = $resta"
echo "Multiplicación: $num1 * $num2 = $multiplicacion"
echo "División: $num1 / $num2 = $division"
